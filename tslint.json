{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": false,
        "object-literal-sort-keys": false,
        "semicolon": true,
        "eofline": false,
        "interface-name": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "no-empty": false,
        "no-empty-interface": false,
        "max-line-length": [
            true,
            {
                "limit": 200,
                "ignore-pattern": "^\\s*\\*"
            }
        ],
        "member-ordering": false,
        "object-literal-shorthand": false,
        "prefer-const": false,
        "forin": false
    },
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    }
}